package com.novaflow.action.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.security.config.Customizer;
import org.springframework.security.config.annotation.web.reactive.EnableWebFluxSecurity;
import org.springframework.security.config.web.server.SecurityWebFiltersOrder;
import org.springframework.security.config.web.server.ServerHttpSecurity;
import org.springframework.security.core.userdetails.MapReactiveUserDetailsService;
import org.springframework.security.core.userdetails.ReactiveUserDetailsService;
import org.springframework.security.core.userdetails.User;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.security.web.server.SecurityWebFilterChain;

import com.novaflow.action.config.ActionProperties.SecurityMode;

import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Configuration
@EnableWebFluxSecurity
@RequiredArgsConstructor
public class SecurityConfig {

    private final ActionProperties properties;

    @Bean
    public SecurityWebFilterChain securityWebFilterChain(ServerHttpSecurity http) {
        SecurityMode mode = properties.getSecurity().getMode();
        log.info("Configuring inbound security with mode: {}", mode);

        http
            .csrf(ServerHttpSecurity.CsrfSpec::disable)
            .authorizeExchange(auth -> auth
                .pathMatchers("/actuator/health", "/actuator/info").permitAll()
                .anyExchange().authenticated()
            );

        switch (mode) {
            case BASIC:
                log.info("Using HTTP Basic authentication");
                http.httpBasic(Customizer.withDefaults());
                break;

            case BEARER_TOKEN:
                log.info("Using Bearer token authentication");
                http.addFilterAt(
                    new BearerTokenAuthFilter(properties.getSecurity().getBearerToken()),
                    SecurityWebFiltersOrder.AUTHENTICATION
                );
                break;

            case JWT_RESOURCE_SERVER:
                log.info("Using JWT Resource Server authentication with issuer: {}",
                    properties.getSecurity().getJwtIssuerUri());
                http.oauth2ResourceServer(oauth2 -> oauth2.jwt(Customizer.withDefaults()));
                break;
        }

        return http.build();
    }

    @Bean
    public ReactiveUserDetailsService userDetailsService() {
        if (properties.getSecurity().getMode() == SecurityMode.BASIC) {
            String username = properties.getSecurity().getBasicUsername();
            String password = properties.getSecurity().getBasicPassword();
            
            if (username != null && !username.isEmpty() && password != null && !password.isEmpty()) {
                return new MapReactiveUserDetailsService(
                    User.builder()
                        .username(username)
                        .password(passwordEncoder().encode(password))
                        .roles("USER")
                        .build()
                );
            }
        }
        // Return a dummy user for non-BASIC modes (required by MapReactiveUserDetailsService)
        return new MapReactiveUserDetailsService(
            User.builder()
                .username("dummy")
                .password(passwordEncoder().encode("dummy"))
                .roles("NONE")
                .disabled(true)
                .build()
        );
    }

    @Bean
    public PasswordEncoder passwordEncoder() {
        return new BCryptPasswordEncoder();
    }
}
