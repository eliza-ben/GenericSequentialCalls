package com.novaflow.action.config;

import java.time.Duration;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.http.client.reactive.ReactorClientHttpConnector;
import org.springframework.web.reactive.function.client.ExchangeStrategies;
import org.springframework.web.reactive.function.client.WebClient;

import io.netty.channel.ChannelOption;
import io.netty.handler.timeout.ReadTimeoutHandler;
import io.netty.handler.timeout.WriteTimeoutHandler;
import lombok.RequiredArgsConstructor;
import reactor.netty.http.client.HttpClient;

@Configuration
@RequiredArgsConstructor
public class WebClientConfig {

    private final ActionProperties properties;

    @Bean
    public WebClient.Builder webClientBuilder() {
        int maxResponseSize = (int) properties.getLimits().getMaxResponseBytes();

        ExchangeStrategies strategies = ExchangeStrategies.builder()
            .codecs(configurer -> configurer
                .defaultCodecs()
                .maxInMemorySize(maxResponseSize))
            .build();

        HttpClient httpClient = HttpClient.create()
            .option(ChannelOption.CONNECT_TIMEOUT_MILLIS, 
                properties.getLimits().getDefaultTimeoutSec() * 1000)
            .doOnConnected(conn -> conn
                .addHandlerLast(new ReadTimeoutHandler(properties.getLimits().getDefaultTimeoutSec()))
                .addHandlerLast(new WriteTimeoutHandler(properties.getLimits().getDefaultTimeoutSec()))
            )
            .responseTimeout(Duration.ofSeconds(properties.getLimits().getDefaultTimeoutSec()));

        return WebClient.builder()
            .exchangeStrategies(strategies)
            .clientConnector(new ReactorClientHttpConnector(httpClient));
    }

    @Bean
    public WebClient webClient(WebClient.Builder builder) {
        return builder.build();
    }
}
